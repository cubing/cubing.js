{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./dist/tsc",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2020",
    "module": "esnext",
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "error",
    "rootDir": "."
  },
  "include": [
    "src/**/*",
    "*/index.js",
    "*/index.d.ts",
    "script/*",
    "script/**/*"
  ],
  "exclude": ["src/dist-static/**/*", "node_modules"]
}
