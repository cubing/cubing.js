{
  "name": "cubing",
  "version": "0.10.5",
  "description": "A collection of Javascript cubing libraries.",
  "author": "The js.cubing.net team",
  "main": "dist/cjs/cubing.js",
  "module": "dist/esm/cubing.js",
  "types": "dist/cjs/src/cubing/index.d.ts",
  "license": "GPL-3.0-or-later",
  "repository": "github:cubing/cubing.js",
  "dependencies": {
    "@types/resize-observer-browser": "^0.1.3",
    "@types/web-bluetooth": "0.0.4",
    "babel-polyfill": "^6.26.0",
    "three": "^0.111.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@rollup/plugin-json": "^4.0.2",
    "@types/jest": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^2.32.0",
    "@typescript-eslint/parser": "^2.32.0",
    "babel-jest": "^24.9.0",
    "eslint": "^7.1.0",
    "eslint-config-mdcs": "^5.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-html": "^6.0.2",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^24.9.0",
    "jest-raw-loader": "^1.0.1",
    "parcel": "^1.12.4",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-pegjs": "0.0.2",
    "parcel-plugin-text": "^0.9.6",
    "pegjs": "^0.11.0-master.f69239d",
    "pegjs-jest": "0.0.2",
    "prettier": "^2.0.5",
    "rollup": "^1.32.1",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-notify": "^1.1.0",
    "rollup-plugin-pegjs": "^2.1.3",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.21.2",
    "ts-jest": "^26.0.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "parcel serve --no-autoinstall app/index.html --open --out-dir dist/parcel",
    "clean": "rm -rf dist .cache .rpt2_cache",
    "test": "jest && npm run lint",
    "format": "npx eslint --fix .; npx prettier --write src app *.config.js */index.js */index.d.ts",
    "setup": "npm install",
    "lint": "npx eslint .",
    "prepack": "npm run clean && npm run build",
    "parcel-build-for-vr-cubing-net": "parcel build --no-autoinstall --public-url ./ --out-dir dist/experiments.cubing.net/vr app/vr/index.html",
    "parcel-build-for-experiments-cubing-net": "parcel build --no-autoinstall --public-url /cubing.js/ --out-dir dist/experiments.cubing.net/cubing.js app/index.html"
  },
  "bin": {
    "puzzle-geometry": "./dist/bin/puzzle-geometry-bin.js"
  },
  "keywords": [
    "cubing",
    "speedcubing",
    "puzzle",
    "visualization",
    "kpuzzle",
    "cuble",
    "bluetooth",
    "rubik",
    "rubik's"
  ],
  "parcel-plugin-text": {
    "extensions": [
      "svg"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-use-before-define": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars-experimental": "error",
      "eqeqeq": "error",
      "quote-props": [
        "error",
        "consistent-as-needed"
      ]
    },
    "ignorePatterns": [
      "/dist",
      "/node_modules"
    ],
    "env": {
      "commonjs": true,
      "browser": true,
      "node": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "quoteProps": "consistent"
  }
}
